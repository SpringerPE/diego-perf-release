#!/bin/bash

set -x
set -e

export PATH=/var/vcap/packages/orchestrator/bin:$PATH

RUN_DIR=/var/vcap/sys/run/orchestrator
LOG_DIR=/var/vcap/sys/log/orchestrator

PIDFILE=$RUN_DIR/orchestrator.pid

source /var/vcap/packages/pid_utils/pid_utils.sh

cd /var/vcap/packages/orchestrator

case $1 in

  start)
    pid_guard $PIDFILE "orchestrator"

    mkdir -p $RUN_DIR
    chown -R vcap:vcap $RUN_DIR

    mkdir -p $LOG_DIR
    chown -R vcap:vcap $LOG_DIR

    # Enable maximum OS thread concurrency
    export GOMAXPROCS=$(nproc)

    # Work around for GOLANG 1.5.3 DNS bug
    export GODEBUG=netdns=cgo

    orchestrator \
      -listenAddress=<%= p("orchestrator.listen_addr") %> \
      -expectedNumPushers=<%= p("orchestrator.pusher_instances") %> \
      2> >(tee -a $LOG_DIR/orchestrator.stderr.log | logger -p user.error -t vcap.orchestrator) \
      1> >(tee -a $LOG_DIR/orchestrator.stdout.log | logger -p user.info -t vcap.orchestrator) &

    echo $! > $PIDFILE

    ;;
  stop)
    kill_and_wait $PIDFILE

    ;;
  *)
    echo "Usage: orchestrator_ctl {start|stop}"

    ;;
esac
