#!/bin/bash

set -x

RUN_DIR=/var/vcap/sys/run/noop
PIDFILE=$RUN_DIR/noop.pid

source /var/vcap/packages/pid_utils/pid_utils.sh

case $1 in
 
  start)
    mkdir -p $RUN_DIR

    echo $$ > $PIDFILE

    kill -STOP $$
  ;;

  stop)
    pid=`cat ${PIDFILE}`

    kill -CONT $pid

    # rm -f $PIDFILE
  ;;

esac
exit 0
