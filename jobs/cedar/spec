---
name: cedar
templates:
  cedar_script.erb: bin/cedar_script

packages:
- cf-cli
- cedar
- pid_utils

properties:
  cedar.api:
    description: The Elastic Runtime API endpoint URL
  cedar.domain:
    description: The Elastic Runtime Appliction Domain
  cedar.admin_user:
    description: The Elastic Runtime API admin user
  cedar.admin_password:
    description: The Elastic Runtime API admin user's password
  cedar.skip_ssl_validation:
    description: Toggles cli verification of the Elastic Runtime API SSL certificate
    default: false
  cedar.max_in_flight:
    description: Number of parallel pushes to run per cell
    default: 10
  cedar.batches:
    description: Number of push batches to run
    default: 10
  cedar.max_polling_errors:
    description: Max number of curl failures for the deployed apps
    default: 1
  cedar.tolerance:
    description: Fractional failure tolerance
    default: 1.0
  cedar.timeout:
    description: Timeout in seconds allowed for cf operations
    default: 30
  cedar.log_level:
    description: Lager log level
    default: debug
